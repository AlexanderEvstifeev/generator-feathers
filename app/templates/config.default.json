{
  "host": "localhost",
  "port": 3030,
  "public": "../public/"<% if(authentication.length){ %>,
  "auth": {<% if(authentication.indexOf('local' > -1)){ %>
    "local": {
      "secret": "<%= secret %>",
      "loginEndpoint": "/login",
      "userEndpoint": "/users",
      "usernameField": "email"
    }<% } %>
  }<% } %><% if (cors === 'whitelisted') { %>,
  "corsWhitelist": [<% corsWhitelist.forEach(function(domain, index, list){ %>
    "<%= domain.trim() %>"<% if(index + 1 !== list.length){ %>,<% } %><% }); %>
  ]<% } %>
}
